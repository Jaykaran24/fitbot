# =============================================================================
# FitBot Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure the values for your environment
# NEVER commit .env files with real credentials to version control!

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/fitbot

# JWT Configuration
# IMPORTANT: Generate a strong secret for production (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-for-production-security

# External AI Services (Optional - for enhanced AI responses)
# Sign up at https://openrouter.ai/ or https://deepseek.com/ to get API keys
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=openai/gpt-3.5-turbo

DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
# For production, set to your actual domain(s)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX_REQUESTS=30

# Open Food Facts API Configuration
# URL for Open Food Facts database (default: Global database)
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org
# Alternative: https://en.openfoodfacts.org for English-focused database
