# =============================================================================
# FitBot Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure the values for your environment
# NEVER commit .env files with real credentials to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string (required)
MONGODB_URI=mongodb+srv://Admin:Admin2435@cluster0.3ie2r5o.mongodb.net/fitbot
# Alternative local: mongodb://localhost:27017/fitbot

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT configuration
JWT_SECRET=fit-bot-development-secret-key-min-32-characters-long-safe
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Admin access for metrics and monitoring
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# EXTERNAL AI SERVICES (Optional)
# ============================================
# OpenRouter API (sign up at https://openrouter.ai/)
OPENROUTER_API_KEY=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
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# DeepSeek API (sign up at https://deepseek.com/)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# ============================================
# FOOD DATABASE API
# ============================================
# Open Food Facts API configuration
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v2
# Alternative: https://en.openfoodfacts.org for English-focused database

# ============================================
# CACHING & REDIS (Production)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry for error tracking (optional)
SENTRY_DSN=your-sentry-dsn

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000

# ============================================
# RATE LIMITING
# ============================================
# Authentication endpoints (15 minutes window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Chat endpoints (1 minute window)
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX_REQUESTS=30

# General API endpoints (1 minute window)
GENERAL_RATE_LIMIT_WINDOW_MS=60000
GENERAL_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=FitBot <noreply@yourdomain.com>

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_EXTERNAL_AI=true
ENABLE_FOOD_SEARCH=true
ENABLE_NUTRITION_TRACKING=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECKS=true

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
# Graceful shutdown timeout (seconds)
SHUTDOWN_TIMEOUT=10

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Maximum request body size
MAX_REQUEST_SIZE=1mb

# ============================================
# DEVELOPMENT SETTINGS (remove in production)
# ============================================
# Uncomment for development mode
# DEBUG=fitbot:*
# VERBOSE_LOGGING=true
# NODE_ENV=development
