{
  "name": "fitbot-backend",
  "version": "1.0.0",
  "description": "FitBot AI Backend - Nutrition tracking and AI chat API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node tests/performance/performance.test.js",
    "test:smoke": "node tests/smoke/smoke.test.js",
    "lint": "eslint *.js middleware/ models/ services/ utils/ config/ monitoring/",
    "lint:fix": "eslint *.js middleware/ models/ services/ utils/ config/ monitoring/ --fix",
    "format": "prettier --write *.js middleware/ models/ services/ utils/ config/ monitoring/",
    "format:check": "prettier --check *.js middleware/ models/ services/ utils/ config/ monitoring/",
    "validate": "npm run lint && npm run test",
    "security-check": "npm audit",
    "security-check:fix": "npm audit fix",
    "build": "echo 'Building production assets...' && npm run lint && npm run test",
    "docker:build": "docker build -f docker/Dockerfile -t fitbot:latest .",
    "docker:build:dev": "docker build -f docker/Dockerfile --target development -t fitbot:dev .",
    "docker:run": "docker run -p 3000:3000 fitbot:latest",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:dev:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:dev:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:prod": "docker-compose -f docker/docker-compose.standalone.yml up -d",
    "docker:prod:logs": "docker-compose -f docker/docker-compose.standalone.yml logs -f",
    "docker:prod:down": "docker-compose -f docker/docker-compose.standalone.yml down",
    "docker:clean": "docker system prune -af && docker volume prune -f",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "metrics": "curl -s http://localhost:3000/metrics | jq .",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "fitness",
    "nutrition",
    "chatbot",
    "ai"
  ],
  "author": "Jay karan chaturvedi",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@ljharb/tsconfig": "^0.3.2",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
